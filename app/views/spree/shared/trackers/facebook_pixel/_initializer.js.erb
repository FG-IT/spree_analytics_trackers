<% if defined?(fp_enabled?) and fp_enabled? %>
<!-- Facebook Pixel Code -->
<script type="text/javascript" data-turbolinks-eval='false'>
if (typeof fbq === 'undefined') {
  let n = window.fbq = function() {
    n.callMethod ? n.callMethod.apply(n, arguments) : n.queue.push(arguments)
  };
  if (!window._fbq) {
    window._fbq = n;
    n.push = n;
    n.loaded = !0;
    n.version='2.0';
    n.queue=[];
  }
}
// window.addEventListener('turbolinks:load', function () {
window.addEventListener('load', function () {
  let src = "https://connect.facebook.net/en_US/fbevents.js";
  let se = document.querySelector('script[src="' + src + '"]');
  if (!se) {
    let tasks = fbq.queue.slice();

    !function(f,b,e,v,n,t,s)
    {t=b.createElement(e);t.defer=!0;
    t.src=v;s=b.getElementsByTagName(e)[0];
    s.parentNode.insertBefore(t,s)}(window, document,'script',
    'https://connect.facebook.net/en_US/fbevents.js');
    fbq('init', '<%= fp_tracker.analytics_id %>');
    for (let task of tasks) {
      fbq(...task);
    }
  }
});
</script>
<!-- End Facebook Pixel Code -->

<% end %>